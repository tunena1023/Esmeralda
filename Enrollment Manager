function onOpen() {
  SpreadsheetApp.getUi()
    .createMenu('Enrollment Manager')
    .addItem('Setup Dashboard', 'setupDashboard')
    .addItem('Check Permissions', 'checkAllPermissions')
    .addToUi();
}

